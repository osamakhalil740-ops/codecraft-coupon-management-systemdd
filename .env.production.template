# ============================================
# PRODUCTION ENVIRONMENT VARIABLES
# Copy this to .env.production and fill in the values
# Then set these in Vercel Environment Variables
# ============================================

# ============================================
# DATABASE (REQUIRED)
# ============================================
# PostgreSQL connection string from your database provider (Vercel Postgres, Supabase, etc.)
DATABASE_URL="postgresql://user:password@host:5432/database?schema=public"

# ============================================
# NEXTAUTH (REQUIRED)
# ============================================
# Your production URL
NEXTAUTH_URL="https://your-domain.vercel.app"

# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-super-secret-key-here"

# Alternative JWT secret (if not using NEXTAUTH_SECRET)
JWT_SECRET="your-jwt-secret-here"

# ============================================
# FIREBASE (REQUIRED FOR AUTH)
# ============================================
NEXT_PUBLIC_FIREBASE_API_KEY="your-firebase-api-key"
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN="your-project.firebaseapp.com"
NEXT_PUBLIC_FIREBASE_PROJECT_ID="your-project-id"
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET="your-project.appspot.com"
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID="your-sender-id"
NEXT_PUBLIC_FIREBASE_APP_ID="your-app-id"

# Firebase Admin SDK (for server-side)
FIREBASE_PROJECT_ID="your-project-id"
FIREBASE_CLIENT_EMAIL="firebase-adminsdk@your-project.iam.gserviceaccount.com"
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour-Private-Key-Here\n-----END PRIVATE KEY-----"

# ============================================
# GOOGLE OAUTH (OPTIONAL)
# ============================================
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# ============================================
# REDIS/UPSTASH (RECOMMENDED FOR CACHING)
# ============================================
UPSTASH_REDIS_REST_URL="https://your-redis.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-upstash-token"

# ============================================
# STRIPE (OPTIONAL - FOR PAYMENTS)
# ============================================
STRIPE_SECRET_KEY="sk_live_your-stripe-secret-key"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_live_your-stripe-publishable-key"
STRIPE_WEBHOOK_SECRET="whsec_your-webhook-secret"

# ============================================
# EMAIL SERVICE (OPTIONAL - FOR NOTIFICATIONS)
# ============================================
# Using Resend
RESEND_API_KEY="re_your-resend-api-key"

# Or using SendGrid
SENDGRID_API_KEY="SG.your-sendgrid-api-key"

# Email from address
EMAIL_FROM="noreply@your-domain.com"

# ============================================
# APP CONFIGURATION
# ============================================
NEXT_PUBLIC_APP_URL="https://your-domain.vercel.app"
NODE_ENV="production"

# ============================================
# OPTIONAL SERVICES
# ============================================
# Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID="G-XXXXXXXXXX"

# Error tracking (Sentry)
SENTRY_DSN="https://your-sentry-dsn"
